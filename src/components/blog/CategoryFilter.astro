---
const { currentCategory } = Astro.props;
const categories = ['all', 'insurance', 'technology', 'politics', 'society'];
---
<div class="categories">
  {categories.map(category => (
    <a
      href={category === 'all' ? '/blog' : `/blog/category/${category}`}
      class:list={[
        'category-link',
        { active: currentCategory === category }
      ]}
    >
      {category}
    </a>
  ))}
</div>

<style>
  .categories {
    display: flex;
    gap: 1rem;
    margin: 2rem 0;
    flex-wrap: wrap;
  }

  .category-link {
    padding: 0.5rem 1rem;
    border-radius: 999px;
    text-decoration: none;
    color: var(--text-color);
    background: #f3f4f6;
    transition: all 0.2s;
  }

  .category-link:hover,
  .category-link.active {
    background: var(--primary-color);
    color: white;
  }
</style>